<% provide(:title, "Kirjaudu sisään") %>
<h1>Kirjaudu sisään</h1>
<p>&nbsp;</p>
<div class="row">
  <div class="col-md-6 ">
    <%= form_for(:session, url: login_path) do |f| %>

    

	  <div class="form-group">
		 <%= f.label :email, 'Sähköposti' %>
      <%= f.email_field :email, class: 'form-control' %>
 	 </div>
	 
	 <div class="form-group">
      <%= f.label :password, 'Salasana' %>
      <%= f.password_field :password, class: 'form-control' %>
 </div>
    
	  <div class="checkbox">
	  <label>
	         <input type="checkbox" value="1" name="session[remember_me]" id="session_remember_me" > Muista minut 
	         
	  </label>
  </div>

      <%= f.submit "Kirjaudu sisään", class: "btn btn-primary" %>
    <% end %>
<p>&nbsp;</p>
    <p>Uusi käyttäjä? <%= link_to "Rekisteröidy", signup_path %></p>
  </div>
</div>